@using GestorStock.Client.Pages.Depositos
@inject IHttpServicio http

<div class="modal fade show" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display:block; background-color: rgba(10,10,10,.8);">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="color:white">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cargar Deposito</h5>
                <button type="button" class="close;" style=" border-width:0px; background-color: #00000000;" data-dismiss="modal" aria-label="Close" @onclick="@ModalCancel">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">


                <FormDeposito deposito="deposito" onValidSubmit="Agregar" onCancel="@ModalCancel"/>

            </div>

        </div>
    </div>
</div>
@code {

    private Deposito deposito = new();

    [Parameter]
    public EventCallback<bool> OnClose { get; set; }


    private async Task Agregar()
    {
        DepositoDTO depositoDTO = new()
            {
                nombreDeposito = deposito.nombreDeposito,
                direccion = deposito.direccion,
                ObraId = deposito.ObraId
            };

        var httpRespuesta = await http.Post<DepositoDTO>("api/Deposito", depositoDTO); //post

        if (httpRespuesta.Error)
        {
            var body = httpRespuesta.HttpResponseMessage;
        }

        await OnClose.InvokeAsync(true);
    }



    private Task ModalCancel()
    {
        return OnClose.InvokeAsync(false);
    }


}